{{define "dashboard.tmpl"}}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{{.Title}}</title>
    <link rel="stylesheet" href="/static/css/styles.css">
    <script src="/static/js/htmx.min.js"></script>
    <link rel="icon" type="image/png" href="/static/favicon/favicon-96x96.png" sizes="96x96" />
    <link rel="icon" type="image/svg+xml" href="/static/favicon/favicon.svg" />
    <link rel="shortcut icon" href="/static/favicon/favicon.ico" />
    <link rel="apple-touch-icon" sizes="180x180" href="/static/favicon/apple-touch-icon.png" />
    <meta name="apple-mobile-web-app-title" content="SpellingClash" />
    <link rel="manifest" href="/static/favicon/site.webmanifest" />
</head>
<body>
    <div class="container">
        <div class="dashboard">
            <header class="dashboard-header">
                <h1>SpellingClash</h1>
                <div class="user-info">
                    <span>Welcome, {{.User.Name}}!</span>
                    <form method="POST" action="/logout" style="display: inline;">
                        <button type="submit" class="btn btn-secondary">Logout</button>
                    </form>
                </div>
            </header>

            <nav class="dashboard-nav">
                <a href="/parent/dashboard" class="nav-link active">Dashboard</a>
                <a href="/parent/kids" class="nav-link">Manage Kids</a>
                <a href="/parent/lists" class="nav-link">Manage Lists</a>
                {{if .User.IsAdmin}}
                <a href="/admin/dashboard" class="nav-link">Admin</a>
                {{end}}
            </nav>

    <main class="dashboard-main">
        {{if .Kids}}
        <div class="dashboard-section">
            <div class="card" style="padding: 1.5rem;">
                <h2>Your Kids</h2>
                <div class="kid-grid">
                    {{range .Kids}}
                    <a href="/parent/kids" class="kid-card-link">
                        <div class="kid-card">
                            <div class="kid-avatar" style="background-color: {{.AvatarColor}}">
                                {{slice .Name 0 1}}
                            </div>
                            <h3>{{.Name}}</h3>
                        </div>
                    </a>
                    {{end}}
                </div>
            </div>
        </div>

        {{if .ParentUsers}}
        <div class="dashboard-section">
            <div class="card" style="padding: 1.5rem;">
                <h2>Parents in Your Family</h2>
                <div style="display: flex; flex-direction: column; gap: 0.75rem;">
                    {{range $index, $user := .ParentUsers}}
                    {{$member := index $.FamilyMembers $index}}
                    <div style="display: flex; justify-content: space-between; align-items: center; padding: 0.75rem; background: #f8f9fa; border-radius: 6px;">
                        <div>
                            <strong>{{$user.Name}}</strong>
                            <div style="font-size: 0.875rem; color: #6c757d;">{{$user.Email}}</div>
                        </div>
                        <span style="background: #e5e7eb; padding: 0.25rem 0.75rem; border-radius: 4px; font-size: 0.875rem; text-transform: capitalize;">{{$member.Role}}</span>
                    </div>
                    {{end}}
                </div>
            </div>
        </div>
        {{end}}

        {{else}}
        <div class="dashboard-section">
            <div class="welcome-box">
                <h2>Welcome to SpellingClash!</h2>
                <p>Get started by adding your kids to your family.</p>
                <div class="action-buttons">
                    <a href="/parent/kids" class="btn btn-primary">Add Kids</a>
                </div>
            </div>
        </div>
        {{end}}

        <!-- Join Family Modal -->
        <div id="joinFamilyModal" class="modal" style="display: none;">
            <div class="modal-content">
                <div class="modal-header">
                    <h3>Switch to Another Family</h3>
                    <button onclick="closeJoinFamilyModal()" class="btn btn-secondary">Ã—</button>
                </div>
                <form method="POST" action="/parent/family/join" style="padding: 1.5rem;">
                    <input type="hidden" name="csrf_token" value="{{.CSRFToken}}">
                    <div class="form-group">
                        <label for="family_code">Family Code</label>
                        <input type="text" id="family_code" name="family_code" placeholder="e.g. a1b2c3d4" required style="text-transform: lowercase;">
                        <p class="text-muted" style="margin-top: 0.5rem; font-size: 0.875rem;">Note: Switching families will replace your current family code with the new one.</p>
                    </div>
                    <div class="modal-footer">
                        <button type="button" onclick="closeJoinFamilyModal()" class="btn btn-secondary">Cancel</button>
                        <button type="submit" class="btn btn-primary">Switch Family</button>
                    </div>
                </form>
            </div>
        </div>
        <!-- Family Code Card -->
        {{if .Families}}
        <div class="dashboard-section">
            {{range .Families}}
            <div class="card" style="padding: 1.5rem;">
                <h2>Your Family Code</h2>
                <div style="display: flex; justify-content: space-between; align-items: center; margin-bottom: 1rem;">
                    <div>
                        <p style="margin: 0; font-size: 0.875rem; color: #6c757d;">Share this code with other parents:</p>
                        <p style="margin: 0.5rem 0 0 0;">
                            <strong style="font-family: monospace; background: #e5e7eb; padding: 0.5rem 1rem; border-radius: 4px; font-size: 1.25rem; letter-spacing: 0.1em;">{{.FamilyCode}}</strong>
                            <button type="button" onclick="navigator.clipboard.writeText('{{.FamilyCode}}'); this.textContent='Copied!'; setTimeout(() => this.textContent='Copy', 2000);" class="btn btn-sm" style="margin-left: 0.5rem; padding: 0.25rem 0.75rem; font-size: 0.875rem;">Copy</button>
                        </p>
                    </div>
                </div>
                <button type="button" onclick="openJoinFamilyModal()" class="btn btn-secondary" style="margin-top: 1rem;">Switch to Another Family</button>
            </div>
            {{end}}
        </div>
        {{end}}

        <script>
            function openJoinFamilyModal() {
                document.getElementById('joinFamilyModal').style.display = 'flex';
            }

            function closeJoinFamilyModal() {
                document.getElementById('joinFamilyModal').style.display = 'none';
                document.getElementById('family_code').value = '';
            }

            // Close modal when clicking outside
            window.onclick = function(event) {
                const modal = document.getElementById('joinFamilyModal');
                if (event.target == modal) {
                    closeJoinFamilyModal();
                }
            }
        </script>

        </main>
        </div>
    </div>
</body>
</html>
{{end}}
