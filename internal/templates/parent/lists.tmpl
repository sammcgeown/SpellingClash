{{define "lists.tmpl"}}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{{.Title}}</title>
    <link rel="stylesheet" href="/static/css/styles.css">
    <script src="/static/js/htmx.min.js"></script>
    <link rel="icon" type="image/png" href="/static/favicon/favicon-96x96.png" sizes="96x96" />
    <link rel="icon" type="image/svg+xml" href="/static/favicon/favicon.svg" />
    <link rel="shortcut icon" href="/static/favicon/favicon.ico" />
    <link rel="apple-touch-icon" sizes="180x180" href="/static/favicon/apple-touch-icon.png" />
    <meta name="apple-mobile-web-app-title" content="SpellingClash" />
    <link rel="manifest" href="/static/favicon/site.webmanifest" />
</head>
<body>
    <div class="container">
        <div class="dashboard">
            <header class="dashboard-header">
                <h1>SpellingClash</h1>
                <div class="user-info">
                    <span>Welcome, {{.User.Name}}!</span>
                    <form method="POST" action="/logout" style="display: inline;">
                        <button type="submit" class="btn btn-secondary">Logout</button>
                    </form>
                </div>
            </header>

            <nav class="dashboard-nav">
                <a href="/parent/dashboard" class="nav-link">Dashboard</a>
                <a href="/parent/family" class="nav-link">Manage Families</a>
                <a href="/parent/kids" class="nav-link">Manage Kids</a>
                <a href="/parent/lists" class="nav-link active">Manage Lists</a>
                {{if .User.IsAdmin}}
                <a href="/admin/dashboard" class="nav-link">Admin</a>
                {{end}}
            </nav>

    <main class="dashboard-main">
        <div class="page-header">
            <h2>Spelling Lists</h2>
            {{if .Families}}
            <button class="btn btn-primary" onclick="document.getElementById('create-list-form').style.display='block'">
                + Create List
            </button>
            {{end}}
        </div>

        {{if .Families}}
        <div id="create-list-form" class="form-modal" style="display:none;">
            <div class="form-box">
                <h3>Create New Spelling List</h3>
                <form method="POST" action="/parent/lists/create">
                    <input type="hidden" name="csrf_token" value="{{.CSRFToken}}">
                    <div class="form-group">
                        <label for="name">List Name</label>
                        <input type="text" id="name" name="name" required autofocus placeholder="e.g., Week 1 Words">
                    </div>
                    <div class="form-group">
                        <label for="description">Description (Optional)</label>
                        <input type="text" id="description" name="description" placeholder="e.g., First grade spelling words">
                    </div>
                    <div class="form-group">
                        <label for="family_id">Family</label>
                        <select id="family_id" name="family_id" required>
                            {{range .Families}}
                            <option value="{{.ID}}">{{.Name}}</option>
                            {{end}}
                        </select>
                    </div>
                    <div class="form-actions">
                        <button type="submit" class="btn btn-primary">Create List</button>
                        <button type="button" class="btn btn-secondary" onclick="document.getElementById('create-list-form').style.display='none'">
                            Cancel
                        </button>
                    </div>
                </form>
            </div>
        </div>

        {{if .Lists}}
        <div class="lists-grid">
            {{range .Lists}}
            <div class="list-card{{if .IsPublic}} list-card-public{{end}}">
                <div class="list-card-header">
                    <h3><a href="/parent/lists/{{.ID}}">{{.Name}}</a></h3>
                    {{if .IsPublic}}
                    <span class="public-badge">üìö Public</span>
                    {{end}}
                </div>
                {{if .Description}}
                <p class="list-description">{{.Description}}</p>
                {{end}}
                <p class="word-count-badge">
                    {{.WordCount}} word{{if ne .WordCount 1}}s{{end}}
                </p>
                {{if and (eq .WordCount 0) (gt .AssignedKidCount 0)}}
                <p class="warning-badge">‚ö†Ô∏è This list has no words but is assigned to {{.AssignedKidCount}} kid{{if gt .AssignedKidCount 1}}s{{end}}</p>
                {{end}}
                <p class="text-muted">Created {{.CreatedAt.Format "Jan 2, 2006"}}</p>
                {{if gt .AssignedKidCount 0}}
                <p class="assignment-badge">Assigned to {{.AssignedKidCount}} kid{{if gt .AssignedKidCount 1}}s{{end}}</p>
                {{else}}
                <p class="text-muted">Not assigned</p>
                {{end}}
                <div class="list-actions">
                    <a href="/parent/lists/{{.ID}}" class="btn btn-primary btn-sm">{{if .IsPublic}}View{{else}}View & Edit{{end}}</a>
                </div>
            </div>
            {{end}}
        </div>
        {{else}}
        <div class="empty-state">
            <p>No spelling lists have been created yet.</p>
            <p>Create your first list to get started!</p>
        </div>
        {{end}}

        {{else}}
        <div class="empty-state">
            <p>Please create a family first before creating spelling lists.</p>
            <a href="/parent/family" class="btn btn-primary">Create a Family</a>
        </div>
        {{end}}
        </main>
        </div>
    </div>
</body>
</html>
{{end}}
