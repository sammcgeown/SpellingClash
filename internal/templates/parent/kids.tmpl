{{define "kids.tmpl"}}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{{.Title}}</title>
    <link rel="stylesheet" href="/static/css/styles.css">
    <script src="/static/js/htmx.min.js"></script>
</head>
<body>
    <div class="container">
        <div class="dashboard">
            <header class="dashboard-header">
                <h1>WordClash</h1>
                <div class="user-info">
                    <span>Welcome, {{.User.Name}}!</span>
                    <form method="POST" action="/logout" style="display: inline;">
                        <button type="submit" class="btn btn-secondary">Logout</button>
                    </form>
                </div>
            </header>

            <nav class="dashboard-nav">
                <a href="/parent/dashboard" class="nav-link">Dashboard</a>
                <a href="/parent/family" class="nav-link">Manage Families</a>
                <a href="/parent/kids" class="nav-link active">Manage Kids</a>
                <a href="/parent/lists" class="nav-link">Manage Lists</a>
            </nav>

    <main class="dashboard-main">
        <div class="page-header">
            <h2>Manage Kids</h2>
            {{if .Families}}
            <button class="btn btn-primary" onclick="document.getElementById('create-kid-form').style.display='block'">
                + Add Kid
            </button>
            {{end}}
        </div>

        {{if .Families}}
        <div id="create-kid-form" class="form-modal" style="display:none;">
            <div class="form-box">
                <h3>Add New Kid</h3>
                <form 
                    method="POST" 
                    action="/parent/kids/create"
                    hx-post="/parent/kids/create"
                    hx-target="#kid-credentials"
                    hx-swap="innerHTML"
                >
                    <input type="hidden" name="csrf_token" value="{{.CSRFToken}}">
                    <div class="form-group">
                        <label for="name">Kid's Name</label>
                        <input type="text" id="name" name="name" required autofocus>
                        <small class="text-muted">This is for parent reference only. Kid will use a generated username.</small>
                    </div>
                    <div class="form-group">
                        <label for="family_id">Family</label>
                        <select id="family_id" name="family_id" required>
                            {{range .Families}}
                            <option value="{{.ID}}">{{.Name}}</option>
                            {{end}}
                        </select>
                    </div>
                    <div class="form-group">
                        <label for="avatar_color">Avatar Color</label>
                        <div class="color-picker">
                            <input type="radio" id="color1" name="avatar_color" value="#4A90E2" checked>
                            <label for="color1" class="color-option" style="background-color: #4A90E2;"></label>

                            <input type="radio" id="color2" name="avatar_color" value="#50C878">
                            <label for="color2" class="color-option" style="background-color: #50C878;"></label>

                            <input type="radio" id="color3" name="avatar_color" value="#FF6B6B">
                            <label for="color3" class="color-option" style="background-color: #FF6B6B;"></label>

                            <input type="radio" id="color4" name="avatar_color" value="#FFA500">
                            <label for="color4" class="color-option" style="background-color: #FFA500;"></label>

                            <input type="radio" id="color5" name="avatar_color" value="#9B59B6">
                            <label for="color5" class="color-option" style="background-color: #9B59B6;"></label>
                        </div>
                    </div>
                    
                    <div id="kid-credentials"></div>
                    
                    <div class="form-actions">
                        <button type="submit" class="btn btn-primary" id="add-kid-btn">Add Kid</button>
                        <button type="button" class="btn btn-secondary" onclick="document.getElementById('create-kid-form').style.display='none'; document.getElementById('kid-credentials').innerHTML=''; this.closest('form').reset();">
                            Close
                        </button>
                    </div>
                </form>
            </div>
        </div>

        {{if .Kids}}
        <div class="kids-grid">
            {{range .Kids}}
            <div class="kid-card-detailed">
                <!-- Name and Avatar -->
                <div class="kid-card-header">
                    <div class="kid-avatar-large" style="background-color: {{.Kid.AvatarColor}}">
                        {{slice .Kid.Name 0 1}}
                    </div>
                    <h3 id="kid-name-{{.Kid.ID}}">{{.Kid.Name}}</h3>
                </div>
                
                <hr class="kid-card-divider">
                
                <!-- Credentials -->
                <div class="kid-credentials">
                    <p><strong>Username:</strong> <code>{{.Kid.Username}}</code></p>
                    <p>
                        <strong>Password:</strong> 
                        <code id="password-{{.Kid.ID}}">{{.Kid.Password}}</code>
                        <form style="display: inline;">
                            <input type="hidden" name="csrf_token" value="{{$.CSRFToken}}">
                            <button 
                                type="button" 
                                class="btn btn-link btn-sm"
                                hx-post="/parent/kids/{{.Kid.ID}}/regenerate-password"
                                hx-target="#password-{{.Kid.ID}}"
                                hx-swap="innerHTML"
                                hx-include="[name='csrf_token']"
                                hx-confirm="Generate a new random password for {{.Kid.Name}}? The old password will stop working.">
                                ğŸ”„ New
                            </button>
                        </form>
                    </p>
                </div>
                
                <!-- Edit Kid Form (Initially Hidden) -->
                <div id="edit-kid-form-{{.Kid.ID}}" class="inline-form" style="display:none; margin-top: 15px;">
                    <form method="POST" action="/parent/kids/{{.Kid.ID}}/update">
                        <input type="hidden" name="csrf_token" value="{{$.CSRFToken}}">
                        <div class="form-group">
                            <label for="edit-name-{{.Kid.ID}}">Name</label>
                            <input type="text" id="edit-name-{{.Kid.ID}}" name="name" value="{{.Kid.Name}}" required>
                        </div>
                        <div class="form-group">
                            <label for="edit-avatar-{{.Kid.ID}}">Avatar Color</label>
                            <div class="color-picker">
                                <input type="radio" id="edit-color1-{{.Kid.ID}}" name="avatar_color" value="#4A90E2" {{if eq .Kid.AvatarColor "#4A90E2"}}checked{{end}}>
                                <label for="edit-color1-{{.Kid.ID}}" class="color-option" style="background-color: #4A90E2;"></label>

                                <input type="radio" id="edit-color2-{{.Kid.ID}}" name="avatar_color" value="#50C878" {{if eq .Kid.AvatarColor "#50C878"}}checked{{end}}>
                                <label for="edit-color2-{{.Kid.ID}}" class="color-option" style="background-color: #50C878;"></label>

                                <input type="radio" id="edit-color3-{{.Kid.ID}}" name="avatar_color" value="#FF6B6B" {{if eq .Kid.AvatarColor "#FF6B6B"}}checked{{end}}>
                                <label for="edit-color3-{{.Kid.ID}}" class="color-option" style="background-color: #FF6B6B;"></label>

                                <input type="radio" id="edit-color4-{{.Kid.ID}}" name="avatar_color" value="#FFA500" {{if eq .Kid.AvatarColor "#FFA500"}}checked{{end}}>
                                <label for="edit-color4-{{.Kid.ID}}" class="color-option" style="background-color: #FFA500;"></label>

                                <input type="radio" id="edit-color5-{{.Kid.ID}}" name="avatar_color" value="#9B59B6" {{if eq .Kid.AvatarColor "#9B59B6"}}checked{{end}}>
                                <label for="edit-color5-{{.Kid.ID}}" class="color-option" style="background-color: #9B59B6;"></label>
                            </div>
                        </div>
                        <div class="form-actions">
                            <button type="submit" class="btn btn-primary btn-sm">Save Changes</button>
                            <button type="button" class="btn btn-secondary btn-sm" onclick="document.getElementById('edit-kid-form-{{.Kid.ID}}').style.display='none'">
                                Cancel
                            </button>
                        </div>
                    </form>
                </div>
                
                <hr class="kid-card-divider">
                
                <!-- Kid Stats Button -->
                <div class="kid-actions" style="margin-top: 15px;">
                    <button 
                        class="btn btn-link btn-sm"
                        hx-get="/parent/kids/{{.Kid.ID}}/struggling-words"
                        hx-target="#struggling-modal-{{.Kid.ID}}"
                        hx-swap="innerHTML"
                        onclick="document.getElementById('struggling-modal-{{.Kid.ID}}').style.display='block'">
                        ğŸ“Š View Performance & Struggling Words
                    </button>
                </div>
                
                <hr class="kid-card-divider">
                
                <!-- List Management -->
                <div class="kid-lists">
                    <h4>Assigned Lists ({{len .AssignedLists}})</h4>
                    {{if .AssignedLists}}
                    <ul class="assigned-lists">
                        {{range .AssignedLists}}
                        <li>
                            <a href="/parent/lists/{{.ID}}">{{.Name}}</a>
                            {{if .IsPublic}}<span class="public-badge-sm">ğŸ“š</span>{{end}}
                            <form method="POST" action="/parent/lists/{{.ID}}/unassign/{{$.Kid.ID}}" style="display: inline;">
                                <input type="hidden" name="csrf_token" value="{{$.CSRFToken}}">
                                <button type="submit" class="btn btn-link btn-sm" style="color: #dc3545;" title="Unassign">ğŸ—‘ï¸</button>
                            </form>
                        </li>
                        {{end}}
                    </ul>
                    {{else}}
                    <p class="text-muted">No lists assigned yet</p>
                    {{end}}
                    
                    <!-- Assign New List -->
                    <div style="margin-top: 10px;">
                        <form method="POST" action="/parent/lists/assign-to-kid" class="inline-assign-form">
                            <input type="hidden" name="csrf_token" value="{{$.CSRFToken}}">
                            <input type="hidden" name="kid_id" value="{{.Kid.ID}}">
                            <select name="list_id" class="form-select-sm" required>
                                <option value="">+ Assign a list...</option>
                                {{$currentKidID := .Kid.ID}}
                                {{$assignedListIDs := .AssignedLists}}
                                {{range $.AllLists}}
                                    {{$isAssigned := false}}
                                    {{range $assignedListIDs}}
                                        {{if eq .ID $.ID}}
                                            {{$isAssigned = true}}
                                        {{end}}
                                    {{end}}
                                    {{if not $isAssigned}}
                                    <option value="{{.ID}}">{{.Name}}{{if .IsPublic}} ğŸ“š{{end}}</option>
                                    {{end}}
                                {{end}}
                            </select>
                            <button type="submit" class="btn btn-primary btn-sm">â• Assign</button>
                        </form>
                    </div>
                </div>
                
                <hr class="kid-card-divider">
                
                <!-- Actions -->
                <div class="kid-actions">
                    <button type="button" class="btn btn-secondary btn-sm" onclick="document.getElementById('edit-kid-form-{{.Kid.ID}}').style.display='block'">
                        âœï¸ Edit
                    </button>
                    <form method="POST" action="/parent/kids/{{.Kid.ID}}/delete" style="display: inline;" onsubmit="return confirm('Are you sure you want to delete {{.Kid.Name}}?');">
                        <input type="hidden" name="csrf_token" value="{{$.CSRFToken}}">
                        <button type="submit" class="btn btn-danger btn-sm">ğŸ—‘ï¸ Delete</button>
                    </form>
                </div>
            </div>
            
            <!-- Struggling Words Modal for this kid -->
            <div id="struggling-modal-{{.Kid.ID}}" class="modal" style="display:none;">
            </div>
            {{end}}
        </div>
        {{else}}
        <div class="empty-state">
            <p>No kids have been added yet.</p>
        </div>
        {{end}}

        {{else}}
        <div class="empty-state">
            <p>Please create a family first before adding kids.</p>
            <a href="/parent/family" class="btn btn-primary">Create a Family</a>
        </div>
        {{end}}
        </main>
        </div>
    </div>
</body>
</html>
{{end}}
