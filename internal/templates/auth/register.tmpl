{{define "register.tmpl"}}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{{.Title}}</title>
    <link rel="stylesheet" href="/static/css/styles.css">
    <script src="/static/js/htmx.min.js"></script>
    <link rel="icon" type="image/png" href="/static/favicon/favicon-96x96.png" sizes="96x96" />
    <link rel="icon" type="image/svg+xml" href="/static/favicon/favicon.svg" />
    <link rel="shortcut icon" href="/static/favicon/favicon.ico" />
    <link rel="apple-touch-icon" sizes="180x180" href="/static/favicon/apple-touch-icon.png" />
    <meta name="apple-mobile-web-app-title" content="SpellingClash" />
    <link rel="manifest" href="/static/favicon/site.webmanifest" />
</head>
<body>
    <div class="container">
        <div class="auth-container">
            <div class="auth-box">
                <h1>SpellingClash</h1>
                <h2>Parent Registration</h2>

                {{if .Error}}
                <div class="error-message">
                    {{.Error}}
                </div>
                {{end}}

                {{if .InviteOnly}}
                <div class="info-message" style="background-color: #e3f2fd; color: #1976d2; padding: 12px; border-radius: 8px; margin-bottom: 20px; border: 1px solid #90caf9;">
                    ðŸ“§ Registration is by invitation only. Please enter your invitation code below.
                </div>
                {{end}}

                <form method="POST" action="/register">
                    {{if .InvitationCode}}
                        {{if .InviteOnly}}
                        <div class="form-group">
                            <label for="invitation_code">Invitation Code *</label>
                            <input type="text" id="invitation_code" name="invitation_code" value="{{.InvitationCode}}" required readonly style="background-color: #f5f5f5;">
                            <small>This invitation code will be validated during registration</small>
                        </div>
                        {{else}}
                        <input type="hidden" id="invitation_code" name="invitation_code" value="{{.InvitationCode}}">
                        {{end}}
                    {{else if .InviteOnly}}
                    <div class="form-group">
                        <label for="invitation_code">Invitation Code *</label>
                        <input type="text" id="invitation_code" name="invitation_code" value="{{.InvitationCode}}" required>
                        <small>Enter the invitation code from your email</small>
                    </div>
                    {{end}}
                    <div class="form-group">
                        <label for="name">Name</label>
                        <input type="text" id="name" name="name" value="{{.Name}}" required autofocus>
                    </div>

                    <div class="form-group">
                        <label for="email">Email</label>
                        <input type="email" id="email" name="email" value="{{.Email}}" required>
                    </div>

                    <div class="form-group">
                        <label for="password">Password</label>
                        <input type="password" id="password" name="password" required>
                        <small>At least 8 characters</small>
                    </div>

                    <div class="form-group">
                        <label for="family_code">Family Code (Optional)</label>
                        <input type="text" id="family_code" name="family_code" value="{{.FamilyCode}}" placeholder="Leave empty to create new family" maxlength="8">
                        <small>Enter a family code to join an existing family, or leave empty to create a new one</small>
                    </div>

                    <button type="submit" class="btn btn-primary">Register</button>
                </form>

                {{if .OAuthProviders}}
                <div class="oauth-section">
                    <div class="oauth-divider"><span>or</span></div>
                    <div class="oauth-buttons">
                        {{range .OAuthProviders}}
                        <a class="btn btn-oauth {{.CSSClass}}" href="{{.URL}}">Continue with {{.Label}}</a>
                        {{end}}
                    </div>
                </div>
                {{end}}

                <p class="auth-link">
                    Already have an account? <a href="/login">Login here</a>
                </p>
            </div>
        </div>
    </div>
</body>
</html>
{{end}}
