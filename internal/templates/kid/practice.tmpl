{{define "practice.tmpl"}}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{{.Title}}</title>
    <link rel="stylesheet" href="/static/css/styles.css">
    <script src="/static/js/htmx.min.js"></script>
    <script src="/static/js/app.js" defer></script>
    <link rel="icon" type="image/png" href="/static/favicon/favicon-96x96.png" sizes="96x96" />
    <link rel="icon" type="image/svg+xml" href="/static/favicon/favicon.svg" />
    <link rel="shortcut icon" href="/static/favicon/favicon.ico" />
    <link rel="apple-touch-icon" sizes="180x180" href="/static/favicon/apple-touch-icon.png" />
    <meta name="apple-mobile-web-app-title" content="SpellingClash" />
    <link rel="manifest" href="/static/favicon/site.webmanifest" />
</head>
<body>
    <div class="container">
        <div class="game-area">
            <header class="game-header">
                <div style="display: flex; align-items: center; gap: 10px;">
                    <img src="/static/images/SpellingClash.png" alt="SpellingClash" style="height: 80px;">
                    <div class="kid-info">
                        <div class="kid-avatar" style="background-color: {{.Kid.AvatarColor}}">
                            {{slice .Kid.Name 0 1}}
                        </div>
                        <span>{{.Kid.Name}}</span>
                    </div>
                </div>
                <div class="game-progress">
                    Word {{.CurrentIndex}} of {{.TotalWords}}
                </div>
                <div class="points-display">
                    <span class="points-icon">‚≠ê</span>
                    <span>{{.TotalPoints}} points</span>
                </div>
            </header>

            <main class="practice-main" id="practice-area">
                <div class="word-prompt">
                    {{if .Word.AudioFilename}}
                    <div class="audio-player">
                        <audio id="word-audio" autoplay>
                            <source src="/static/audio/{{.Word.AudioFilename}}" type="audio/mpeg">
                            Your browser doesn't support audio playback.
                        </audio>
                        {{if .Word.DefinitionAudioFilename}}
                        <audio id="definition-audio">
                            <source src="/static/audio/{{.Word.DefinitionAudioFilename}}" type="audio/mpeg">
                        </audio>
                        {{end}}
                        <button type="button" class="btn btn-secondary btn-lg audio-replay-btn" data-audio-target="#word-audio">
                            üîä Play Word Again
                        </button>
                        {{if .Word.DefinitionAudioFilename}}
                        <button type="button" class="btn btn-secondary btn-lg audio-replay-btn" style="margin-left: 10px;" data-audio-target="#definition-audio">
                            üìñ Hear Definition
                        </button>
                        {{end}}
                    </div>
                    <p class="word-hint">Listen carefully and type what you hear</p>
                    {{else}}
                    <div class="word-display-fallback">
                        <p class="word-hint">Spell this word:</p>
                        <h1 class="practice-word-display">{{.Word.WordText}}</h1>
                        {{if .Word.Definition}}
                        <p class="word-definition-practice">{{.Word.Definition}}</p>
                        {{end}}
                    </div>
                    {{end}}
                </div>

                <form id="answer-form" method="POST" action="/child/practice/submit" class="practice-form" data-practice-form="true">
                    <input type="hidden" name="word_start_time" id="word-start-time" value="">
                    <div class="answer-input-group">
                        <input
                            type="text"
                            name="answer"
                            id="answer-input"
                            class="answer-input"
                            placeholder="Type your answer..."
                            autocomplete="off"
                            spellcheck="false"
                            autocorrect="off"
                            autocapitalize="off"
                            autofocus
                            required>
                        <button type="submit" class="btn btn-primary btn-lg">Submit</button>
                    </div>
                </form>

                <div id="feedback" class="feedback-message" style="display:none;"></div>
            </main>

            <footer class="game-footer">
                <form method="POST" action="/child/practice/exit" style="margin: 0;">
                    <button type="submit" class="btn btn-secondary">Exit Practice</button>
                </form>
            </footer>
        </div>
    </div>
</body>
</html>
{{end}}
