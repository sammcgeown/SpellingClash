{{define "kid_login.tmpl"}}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{{.Title}}</title>
    <link rel="stylesheet" href="/static/css/styles.css">
    <link rel="icon" type="image/png" href="/static/favicon/favicon-96x96.png" sizes="96x96" />
    <link rel="icon" type="image/svg+xml" href="/static/favicon/favicon.svg" />
    <link rel="shortcut icon" href="/static/favicon/favicon.ico" />
    <link rel="apple-touch-icon" sizes="180x180" href="/static/favicon/apple-touch-icon.png" />
    <meta name="apple-mobile-web-app-title" content="SpellingClash" />
    <link rel="manifest" href="/static/favicon/site.webmanifest" />
</head>
<body>
    <div class="container">
        <div class="auth-container">
            <div class="auth-box">
                <h1>SpellingClash</h1>
                
                <div class="kid-avatar-large" style="background-color: {{.Kid.AvatarColor}}">
                    {{slice .Kid.Username 0 1}}
                </div>
                
                <h2>{{.Kid.Username}}</h2>
                
                {{if .HasError}}
                <div class="error-message">
                    Incorrect password. Please try again.
                </div>
                {{end}}
                
                <form method="POST" action="/kid/login/{{.Kid.ID}}">
                    <input type="hidden" name="username" value="{{.Kid.Username}}">
                    <div class="form-group">
                        <label for="password">Password</label>
                        <input 
                            type="text" 
                            id="password" 
                            name="password" 
                            placeholder="Enter your 4-character password"
                            maxlength="4"
                            required 
                            autofocus
                            autocomplete="off"
                        >
                    </div>
                    
                    <button type="submit" class="btn btn-primary">Login</button>
                </form>
                
                <p class="auth-link">
                    <a href="/kid/select">‚Üê Back to profile selection</a>
                </p>
            </div>
        </div>
    </div>

    <script>
        // Save username to localStorage on successful form submission
        document.querySelector('form').addEventListener('submit', function() {
            const username = '{{.Kid.Username}}';
            const remembered = JSON.parse(localStorage.getItem('spellingclash_usernames') || '[]');
            
            // Add username if not already remembered
            if (!remembered.includes(username)) {
                remembered.push(username);
                localStorage.setItem('spellingclash_usernames', JSON.stringify(remembered));
            }
        });
    </script>
</body>
</html>
{{end}}
